<main>
  <div class="panel panel-default">
  <div class="panel-heading">Appointments</div>
    <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Purpose</th>
          <th>Date</th>
          <th>Time</th>
          <th>Customer</th>
          <th>Confirmed</th>
        </tr>
      </thead>

      <tbody>
          <% @appointments.order(:appointment_date).each do |appointment| %>
              <tr>
                <td><%= appointment.purpose %></td>
                <td><%= appointment.appointment_date %></td>
                <td><%= appointment.appointment_time %></td>
                <td><%= appointment.customer.first_name %>  <%= appointment.customer.last_name %></td>
                <td><%= appointment.confirmation ? 'Yes' : 'No' %></td>
              </tr>
          <% end %>
      </tbody>
    </table>
    <%= link_to 'Calendar', employee_calendar_path(@employee), class: "btn btn-primary" %>
  </div>
  <div class="panel-footer">
    <%= link_to "Main page", root_path %>
  </div>
</div>
</main>


