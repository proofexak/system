<main>
	<div class="panel panel-default">
  <div class="panel-heading">Listing users</div>
  <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Type</th>
          <th colspan="6"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.order(:type ,:email).each do |user| %>
          <tr>
            <%if user.try(:type) == "customer"%>
              <td><%=  first_name?(user.customer) %></td>
            <%elsif user.try(:type) == "employee"%>
              <td><%=  first_name?(user.employee) %></td>
            <%elsif user.try(:type) == "secretary"%>
              <td><%=  first_name?(user.customer) %></td>
            <%else%>
              <td><%=  "" %></td>
            <%end%>

            <%if user.try(:type) == "customer"%>
              <td><%=  last_name?(user.customer) %></td>
            <%elsif user.try(:type) == "employee"%>
              <td><%=  last_name?(user.employee) %></td>
            <%elsif user.try(:type) == "secretary"%>
              <td><%=  last_name?(user.customer) %></td>
            <%else%>
              <td><%=  "" %></td>
            <%end%>

            <td><%= user.email %></td>
            <td><%= user.type.capitalize %></td>
            <td><%= link_to t('admin.users.make_admin'), admin_user_change_type_path(user, form: :admin), class: "btn btn-primary" %></td>
            <td><%= link_to t('admin.users.make_employee'), admin_user_change_type_path(user, form: :employee), class: "btn btn-primary" %></td>
            <td><%= link_to t('admin.users.make_secretary'), admin_user_change_type_path(user, form: :secretary), class: "btn btn-primary" %></td>
            <td><%= link_to t('admin.users.make_customer'), admin_user_change_type_path(user, form: :customer), class: "btn btn-primary" %></td>
            <td><%= link_to "Delete user", admin_user_path(user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></td>
            <td><%= link_to "Become", admin_user_become_path(user), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <%= link_to "Main page", root_path %>
  </div>
</div>
</main>