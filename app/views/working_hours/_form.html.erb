<%= form_for @hour, url: (@hour.new_record? ? employee_working_hours_path(@employee) : employee_working_hour_path(@employee, @hour)), method: (@hour.new_record? ? :post : :put) do |f| %>
<div class="panel-body">
  <div class="form-group">
    <%= f.label :day %><br>
    <%= f.select :day, [["Monday", 'monday'], ["Tuesday", 'tuesday'], ["Wednesday", 'wednesday'], ["Thursday", 'thursday'], ["Friday", 'friday']], {prompt: "Please select"}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :start_hour %><br>
    <%= f.select :start_hour, @select_hours.map {|value| [value, value]} %>
  </div>
  <div class="form-group">
    <%= f.label :end_hour %><br>
    <%= f.select :end_hour, @select_hours.map {|value| [value, value]} %>
  </div>
  <div class="actions">
    <%= f.submit @hour.persisted? ? "Update" : "Create", class: "btn btn-primary" %>
  </div>
</div>

<% if @hour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hour.errors.count, "error") %> prohibited this working hours from being saved:</h2>

      <ul>
      <% @hour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
