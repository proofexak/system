<%= form_for @hour, :url =>  new_or_edit_wh?(@employee, @hour, @path), :method => post_or_put?(params[:method]) do |f| %>
<div class="panel-body">
  <div class="form-group">
    <%= f.label :day %><br>
    <%= f.select :day, [["Monday", 'monday'], ["Tuesday", 'tuesday'], ["Wednesday", 'wednesday'], ["Thursday", 'thursday'], ["Friday", 'friday']], {prompt: "Please select"}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :start_hour %><br>
    <%= f.time_field :start_hour %>
  </div>
  <div class="form-group">
    <%= f.label :end_hour %><br>
    <%= f.time_field :end_hour %>
  </div>
  <div class="actions">
    <%= f.submit @hour.persisted? ? "Update" : "Create", class: "btn btn-primary" %>
  </div>
</div>

<% if @hour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hour.errors.count, "error") %> prohibited this working hours from being saved:</h2>

      <ul>
      <% @hour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
