<main>
	<div class="panel panel-default">
  <div class="panel-heading">Listing employees</div>
  <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last Name</th>
          <th>Position</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @employee.order(:position).each do |employee| %>
          <tr>
            <td><%= first_name?(employee)%></td>
            <td><%= last_name?(employee)%></td>
            <td><%= employee.position %></td>
            <td><%= link_to "Show working hours", customer_employee_path(employee), class: "btn btn-primary" %></td>
            <td><%= link_to "Make appointment", appointments_new_date_path(employee: employee.id), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <%= link_to "Main page", root_path %>||<%= link_to 'Back', customers_path %>
  </div>
</div>
</main>