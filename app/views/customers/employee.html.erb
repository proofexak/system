<main>
	<div class="panel panel-default">
  <div class="panel-heading">Listing working hours for <%= @employee.first_name%> <%= @employee.last_name%></div>
  <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Day</th>
          <th>Start</th>
          <th>End</th>

        </tr>
      </thead>

      <tbody>
        <% @working_hours.order(:lp).each do |hour| %>
          <tr>
            <td><%= hour.day.capitalize%></td>
            <td><%= hour.start_hour%></td>
            <td><%= hour.end_hour%></td>
           
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to "Make appointment", appointments_new_date_path(employee: @employee.id), class: "btn btn-primary" %>
    <div class="calendar" data-path="<%= customer_employee_path(@employee, format: :json) %>"></div>
  </div>
  <div class="panel-footer">
    <%= link_to "Main page", root_path %>||<%= link_to "Back", customer_search_path(@user.customer)  %>
  </div>
</div>
</main>