<main>
  <div class="panel panel-default">
  <div class="panel-heading">Your appointments</div>
    <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Purpose</th>
          <th>Extra</th>
          <th>Date</th>
          <th>Time</th>
          <th>Employee</th>
          <th>Confirmed</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
          <% @appointments.order(:appointment_date, :appointment_time, :purpose).each do |appointment| %>
            <tr>
              <td><%= appointment.purpose %></td>
              <td><%= appointment.extra %></td>
              <td><%= appointment.appointment_date %></td>
              <td><%= appointment.appointment_time %></td>
              <td><%= @employee_name[appointment.id] %></td>
              <td>
                <%if appointment.confirmation%>
                  Yes
                <%else%>
                  No
                <%end%>
              </td>
              <td><%= link_to 'Edit', edit_employee_appointment_path(appointment.employee_id, appointment), class: "btn btn-primary" %></td>
              <td><%= link_to 'Show', appointment_path(appointment.id), class: "btn btn-primary" %></td>
              <td><%= link_to "Cancel", appointment_path(appointment), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
    <%= link_to 'New appointment', customer_search_path(@customer), class: "btn btn-primary" %>
    <%= link_to 'Calendar', customer_calendar_path(@customer), class: "btn btn-primary" %>
  </div>
  <div class="panel-footer">
    <%= link_to "Main page", root_path %>
  </div>
</div>
</main>


