<%= form_for @appointment, url: new_or_edit_a?(@path, @employee, @appointment), method: post_or_put?(params[:method]) do |f| %>
<div class="panel-body">
  <div class="form-group">
    <%= f.label :purpose, "Purpose of the appointment" %><br>
    <%= f.text_field :purpose %>
  </div>
  <div class="form-group">
    <%= f.label :extra, "Extra informations" %><br>
    <%= f.text_field :extra %>
  </div>
  <div class="form-group">
    <%= f.label :appointment_date, "Appointment date" %><br>
    <%= f.date_field :appointment_date %>
  </div>
  <div class="form-group">
    <%= f.label :appointment_time, "Appointment time" %><br>
    <%= f.select :appointment_time, @test.map { |value| [value, value] }  %>
  </div>
  
  <div class="actions">
    <%= f.submit @appointment.persisted? ? "Update" : "Finish", class: "btn btn-primary" %>
  </div>
</div>

<% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this bot from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
