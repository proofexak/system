<%= form_for @appointment, url: newOrEditt?(@path, @employee, @appointment), method: postOrPut?(@value) do |f| %>
<div class="panel-body">
  <div class="form-group">
    <%= f.label :purpose, "Purpose of the appointment" %><br>
    <%= f.text_field :purpose %>
  </div>
  <div class="form-group">
    <%= f.label :extra, "Extra informations" %><br>
    <%= f.text_field :extra %>
  </div>
  <div class="form-group">
    <%= f.label :appointmentDate, "Appointment date" %><br>
    <%= f.date_field :appointmentDate %>
  </div>
  <div class="form-group">
    <%= f.label :appointmentTime, "Appointment time" %><br>
    <%= f.time_field :appointmentTime %>
  </div>
  
  <div class="actions">
    <%= f.submit @appointment.persisted? ? "Update" : "Finish", class: "btn btn-primary" %>
  </div>
</div>

<% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this bot from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
