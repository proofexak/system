<main class="center">
	<% if !user_signed_in? %>
		<%= link_to 'Log in', new_user_session_path, class: "btn btn-primary" %>
		<%= link_to 'Registration', new_user_registration_path, class: "btn btn-primary" %>
	<% end %>
	<% if user_signed_in? && @user.try(:admin?)%>
		<%= link_to 'Users', home_user_list_path, class: "btn btn-primary" %>
		<%= link_to 'Edit account', edit_user_registration_path, class: "btn btn-primary" %>
		<%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
	<% end %>
</main>