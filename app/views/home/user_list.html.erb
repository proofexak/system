<main>
	<div class="panel panel-default">
  <div class="panel-heading">Listing users</div>
  <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Admin</th>
          <th>Type</th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.order(:type ,:email).each do |user| %>
          <tr>
            <td><%= first_name?(user.customer_info) %></td>
            <td><%= last_name?(user.customer_info) %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= user.type %></td>
            <td><%= link_to 'Make admin', change_type_path(user, form: :Admin), class: "btn btn-primary" %></td>
            <td><%= link_to 'Make employee', change_type_path(user, form: :Employee), class: "btn btn-primary" %></td>
            <td><%= link_to 'Make secretary', change_type_path(user, form: :Secretary), class: "btn btn-primary" %></td>
            <td><%= link_to 'Make customer', change_type_path(user, form: :Customer), class: "btn btn-primary" %></td>
            <td><%= link_to "Delete user", delete_user_path(user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <%= link_to "Main page", root_path %>
  </div>
</div>
</main>