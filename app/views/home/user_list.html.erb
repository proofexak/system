<main>
	<div class="panel panel-default">
  <div class="panel-heading">Listing buidlings</div>
  <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>First name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Admin</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= first_name?(user.customer_info) %></td>
            <td><%= last_name?(user.customer_info) %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
            <td><%= link_to 'Make admin', make_admin_path(user), class: "btn btn-primary" %></td>
            <td><%= link_to 'Revoke admin', revoke_admin_path(user), class: "btn btn-primary" %></td>
            <td><%= link_to "Delete user", delete_user_path(user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer">
    <%= link_to "Main page", root_path %>
  </div>
</div>
</main>